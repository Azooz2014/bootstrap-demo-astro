---
import CardLight from "./CardLight.astro";
import CardDark from "./CardDark.astro";

const data = [
  {
    icon: "bi bi-laptop",
    title: "Virtual",
    content:
      "Lorem ipsum, dolor sit amet consectetur adipisicing elit. Ipsam adipisci repellat assumenda labore obcaecati mollitia?",
  },
  {
    icon: "bi bi-person-square",
    title: "Hybrid",
    content:
      "Lorem ipsum, dolor sit amet consectetur adipisicing elit. Ipsam adipisci repellat assumenda labore obcaecati mollitia?",
  },
  {
    icon: "bi bi-people",
    title: "In Person",
    content:
      "Lorem ipsum, dolor sit amet consectetur adipisicing elit. Ipsam adipisci repellat assumenda labore obcaecati mollitia?",
  },
];
---

<section class="p-5">
  <div class="container">
    <div class="row text-center g-4">
      {
        /* Loop through data and show card for each one with alternating styles. */
        data.map((data, position) =>
          position % 2 === 0 ? (
            <CardDark
              icon={data.icon}
              title={data.title}
              content={data.content}
            />
          ) : (
            <CardLight
              icon={data.icon}
              title={data.title}
              content={data.content}
            />
          )
        )
      }
    </div>
  </div>
</section>

